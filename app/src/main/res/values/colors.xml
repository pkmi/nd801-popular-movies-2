    <!-- These color names are based on Theme.AppCompat.Light.DarkActionBar attributes
         and are mapped to Material.io Color Tool color names above. -->
    <color name="colorAccent">@color/materialSecondaryColor</color>
    <color name="colorAccentLight"
        tools:keep="@color/colorAccentLight">@color/materialSecondaryLightColor</color>

    <color name="colorPrimary">@color/materialPrimaryColor</color>
    <color name="colorPrimaryDark">@color/materialPrimaryDarkColor</color>

    <color name="colorBackground">@android:color/background_dark</color>
    <color name="colorForeground">@android:color/background_light</color>

    <color name="iconColor" tools:keep="@color/iconColor">#FF853D</color>

    <color name="navigationBarColor">@color/materialPrimaryDarkColor</color>
    <color name="statusBarColor">@color/materialPrimaryDarkColor</color>

    <color name="tabColorBackground">@color/materialPrimaryLightColor</color>
    <color name="textColorPrimary">@color/materialPrimaryTextColor</color>
    <color name="textColorPrimaryInverse">@color/materialSecondaryTextColor</color>
    <color name="textColorSecondary">@color/materialSecondaryTextColor</color>
    <color name="textColorSecondaryInverse">@color/materialPrimaryTextColor</color>
    <color name="windowBackground">@android:color/background_light</color>

</resources>