<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Custom color names used in the app. -->
    <color name="colorTabItemBackground">@color/tabColorBackground</color>

    <!-- These color names are based on the export from Color Tool https://material.io/color;
     with the "material" prefix added. -->
    <color name="materialPrimaryColor">#1d1d1e</color>
    <color name="materialPrimaryLightColor">#6746c3</color>
    <color name="materialPrimaryDarkColor">#000000</color>
    <color name="materialSecondaryColor">#fdd835</color>
    <color name="materialSecondaryLightColor"
        tools:keep="@color/materialSecondaryLightColor">#ffff6b</color>
    <color name="materialSecondaryDarkColor">#c6a700</color>
    <color name="materialPrimaryTextColor">#ffee58</color>
    <color name="materialSecondaryTextColor">#4a148c</color>

