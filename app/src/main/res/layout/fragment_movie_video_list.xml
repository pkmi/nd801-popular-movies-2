<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_fragment_movie_video_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorTabItemBackground"
        android:visibility="visible" />

    <TextView style="@style/PkmEmptyMovieExtraList"
        android:id="@+id/tv_fragment_movie_video_list_empty"
        android:text="@string/empty_movie_video_list"/>

    <ProgressBar style="@style/PkmProgressBar"
        android:id="@+id/pb_fragment_movie_video_list"
        android:layout_height="@dimen/progress_bar_height"
        android:layout_width="@dimen/progress_bar_width"
        android:layout_gravity="center_horizontal"
        android:visibility="invisible" />

</FrameLayout>